# Environment Variables for ICICI Breeze Trading Platform
# Copy this file to .env and fill in your actual credentials

# ICICI Direct API Credentials
# Get these from: https://api.icicidirect.com/apiuser/login?api_key=YOUR_API_KEY
ICICI_API_KEY=your_api_key_here
ICICI_API_SECRET=your_secret_key_here
ICICI_SESSION_TOKEN=your_session_token_here

# Trading Mode
PAPER_TRADING=true

# Risk Management
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=10000

# Logging
LOG_LEVEL=INFO

# Database (Optional)
DATABASE_URL=sqlite:///trading.db

# Notifications (Optional)
EMAIL_ENABLED=false
WEBHOOK_URL=

# Development Settings
DEBUG_MODE=false